.settle{
  background-color: #f60;
}
.empty-cart{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cart-image{
  width:400rpx;
  height: 350rpx;
  margin:50rpx 0;
}
.tips{
  color : #ccc;
  font-size: 40rpx;
  margin-top: 200rpx;
}
.sancode{
  border-radius: 15rpx;
  background-color: #FEBE1B;
  padding : 20rpx 100rpx;
}